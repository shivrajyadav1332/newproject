<script>
/* ---------- Tab Navigation ---------- */
const tabs = document.querySelectorAll('.tab-btn');
const panels = { clock: '#clock', timer: '#timer', stopwatch: '#stopwatch' };
tabs.forEach(btn=>{
  btn.addEventListener('click', ()=>{
    tabs.forEach(b=>b.setAttribute('aria-selected','false'));
    btn.setAttribute('aria-selected','true');
    Object.values(panels).forEach(sel=>document.querySelector(sel).hidden = true);
    document.querySelector(panels[btn.dataset.tab]).hidden = false;
  });
});

/* ---------- Utility ---------- */
const pad = (n, len=2) => n.toString().padStart(len,'0');

